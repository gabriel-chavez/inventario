
@model sistemainventario.Models.usuariosSistema

<div class="">
    <div class="page-title">
        <div class="title_left">
            <h3>
                Administrador
            </h3>
        </div>
    </div>
    <div class="x_panel">
        <div class="x_title">
            <h2>Usuarios</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="text-right">
            <button type="button" class="btn btn-sm btn-default" data-toggle="modal" data-target="#agregarUsuario" id="btnnuevousuario">Agregar nuevo usuario</button>
        </div>
        <div class="x_content">
            <div class="">
                <div id="toolbar2" class="form-inline">
                </div>
                <table id="listausuarios"
                       data-toolbar="#toolbar2">
                </table>
            </div> <!--div class="table-responsive"-->
        </div>
    </div>
</div>

<!--Modal Agregar Tarea-->
<div class="modal fade" tabindex="-1" role="dialog" aria-hidden="true" id="agregarUsuario">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">
                    <span aria-hidden="true">×</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Agregar tarea</h4>
            </div>
            
            @using (Html.BeginForm("Guardar", "Usuario", FormMethod.Post))
            {

                <input name="IdTarea" id="IdTarea" class="hidden" value="0" />
                <input name="Nro" id="Nro" class="hidden" value="0" />
                <div class="modal-body">
                    <div class="form-horizontal">
                       
                      
                        <div class="col-md-6 col-sm-6 col-xs-12 form-group">
                            <div class='input-group date' id='fechacierre'>
                                <input type='text' class="form-control" name="FechaComprometida" id="FechaComprometida" placeholder="Fecha comprometida de cierre" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <div class="form-group">
                            <label>Acciones realizadas</label>
                            <textarea class="form-control" rows="4" name="Acciones" id="Acciones"></textarea>
                        </div>
                        <div class="form-group">
                            <label>Tarea</label>
                            <textarea class="form-control" rows="8" name="TareaAsignada" id="TareaAsignada"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <button type="submit" data-ajax="true" class="btn btn-primary">Guardar cambios</button>
                </div>
            }            
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {        
        retornarTablaUsuarios();
    })
</script>